{
  "name": "proccheck-html",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "lerna": "cross-env ./node_modules/.bin/lerna",
    "start": "cross-env ts-node ./src/index.ts",
    "prettier": "cross-env ./node_modules/.bin/prettier '**/*.{json,md,scss,yaml,yml}'",
    "tslint:fix": "cross-env ./node_modules/.bin/tslint --project tsconfig.json -e .gitignore 'src/**/*.{js,ts} --fix'",
    "test": "jest",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/jest --coverage",
    "test:coverall": "npm run test:coverage && cat ./coverage/lcov.info | cross-env ./node_modules/.bin/coveralls"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "cross-env ./node_modules/.bin/tslint --fix --project tsconfig.json -e .gitignore",
      "git add"
    ],
    "*.{json,md,scss,yaml,yml}": [
      "cross-env ./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/proccheck/proccheck-html.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/proccheck/proccheck-html/issues"
  },
  "homepage": "https://github.com/proccheck/proccheck-html#readme",
  "dependencies": {
    "@types/node": "^11.11.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.6",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.1.7",
    "microbundle": "^0.11.0",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1"
  }
}
